pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/DeepthiPandilla/spring-petclinic.git'
            }
        }
        stage('Build') {
            steps {
                sh './mvn clean install'
            }
        }
        stage('Test') {
            steps {
                sh './mvn test' 
            }
        }
        stage('Package') {
            steps {
                sh './mvn package' if using Maven
            }
        }
        stage('Deploy') {
            steps {
                sh 'scp build/libs/*.jar labuser@3.111.33.8:/home/labuser/jenkinsproject'
            }
        }
    }

    post {
        success {
            echo 'Build and Deploy succeeded!'
        }
        failure {
            echo 'Build or Deploy failed!'
        }
    }
}
